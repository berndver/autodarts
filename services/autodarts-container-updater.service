[Unit]
Description=Starts watchtower to update the autodarts service
Requires=network-online.target docker.service autodarts-repository-updater.service
After=network-online.target docker.service autodarts-repository-updater.service

[Service]
ExecStart=/bin/docker run -v /var/run/docker.sock:/var/run/docker.sock containrrr/watchtower --run-once --label-enable

[Install]
Alias=autodarts-container-updater.service
